{
  "name": "angular-mdc",
  "description": "Material Web Components for Angular",
  "homepage": "https://github.com/trimox/angular-mdc-web",
  "bugs": "https://github.com/trimox/angular-mdc-web/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/trimox/angular-mdc-web.git"
  },
  "license": "MIT",
  "version": "0.41.0",
  "engines": {
    "node": ">= 9.11.1"
  },
  "requiredAngularVersion": ">=7.0.0",
  "scripts": {
    "build": "gulp web:build",
    "build:release": "gulp web:build && gulp web:build-release",
    "migrate-mdc-sass": "rimraf packages/material-components-web/scss && node scripts/migrate-mdc-scss.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "lint": "npm run lint:ts && npm run lint:css",
    "lint:ts": "tslint 'packages/**/*.ts'",
    "lint:css": "stylelint \"packages/material-components-web/**/*.scss\"",
    "fix:css": "stylelint --fix \"packages/material-components-web/**/*.scss\"",
    "test": "npm run test:unit",
    "test:unit": "karma start --single-run",
    "test:watch": "karma start --auto-watch",
    "server": "webpack-dev-server --config demos/webpack.config.js --progress",
    "start": "npm run server"
  },
  "dependencies": {
    "@angular/common": "^7.0.2",
    "@angular/compiler": "^7.0.2",
    "@angular/core": "^7.0.2",
    "@angular/forms": "^7.0.2",
    "@angular/platform-browser": "^7.0.2",
    "core-js": "2.5.7",
    "material-components-web": "^0.41.0",
    "rxjs": "^6.3.3",
    "tsickle": "^0.33.1",
    "tslib": "1.9.3",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^7.0.2",
    "@angular/platform-browser-dynamic": "^7.0.2",
    "@angular/router": "^7.0.2",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@types/fs-extra": "^5.0.3",
    "@types/glob": "^7.1.1",
    "@types/gulp": "^4.0.5",
    "@types/jasmine": "^2.8.9",
    "@types/node": "^10.12.2",
    "@types/run-sequence": "0.0.30",
    "angular2-template-loader": "^0.6.2",
    "babel-loader": "^8.0.2",
    "babel-plugin-istanbul": "^5.0.1",
    "classlist.js": "^1.1.20150312",
    "codecov": "^3.0.4",
    "codelyzer": "^4.5.0",
    "cpx": "^1.5.0",
    "cz-conventional-changelog": "^2.1.0",
    "focus-trap": "^3.0.0",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.2",
    "gulp": "^3.9.1",
    "gulp-cli": "^2.0.1",
    "gulp-util": "^3.0.8",
    "html-loader": "^0.5.5",
    "husky": "^1.1.3",
    "istanbul": "^0.4.5",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine-core": "^3.3.0",
    "karma": "^3.1.1",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-coverage-istanbul-reporter": "^2.0.4",
    "karma-jasmine": "^1.1.2",
    "karma-remap-istanbul": "0.6.0",
    "karma-webpack": "^3.0.5",
    "magic-string": "^0.25.0",
    "ngx-highlightjs": "^2.1.2",
    "node-sass": "^4.9.2",
    "raw-loader": "^0.5.1",
    "resolve-bin": "^0.4.0",
    "rollup": "^0.66.6",
    "rollup-plugin-alias": "^1.3.1",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-babel-minify": "^6.1.1",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "run-sequence": "^2.2.1",
    "sass-loader": "^7.0.3",
    "string-replace-loader": "^2.1.1",
    "style-loader": "^0.21.0",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-order": "^0.8.0",
    "stylelint-scss": "^3.0.1",
    "stylelint-selector-bem-pattern": "^2.0.0",
    "ts-loader": "^5.2.1",
    "ts-node": "^7.0.0",
    "tsconfig-paths": "^3.4.2",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.9.1",
    "typescript": "^3.1.3",
    "validate-commit-msg": "^2.14.0",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.10"
  },
  "config": {
    "validate-commit-msg": {
      "helpMessage": "%s\nNOTE: Please see angular's commit message guidelines (https://github.com/angular/angular.js/blob/master/CONTRIBUTING.md#commit) for information on how to format commit messages.\n\nAs an example, here is a valid commit message: 'docs(slider): Document slider public api'\n\nIf this commit is on a development / WIP branch, you can disable this by running `git commit --no-verify`.",
      "scope": {
        "allowed": [
          "button",
          "card",
          "checkbox",
          "chips",
          "dialog",
          "drawer",
          "elevation",
          "fab",
          "floating-label",
          "form-field",
          "grid-list",
          "icon",
          "icon-button",
          "image-list",
          "layout-grid",
          "linear-progress",
          "line-ripple",
          "list",
          "material-icon",
          "menu",
          "menu-surface",
          "notched-outline",
          "radio",
          "ripple",
          "rtl",
          "select",
          "shape",
          "slider",
          "snackbar",
          "switch",
          "tab",
          "tab-bar",
          "tab-indicator",
          "tab-scroller",
          "text-field",
          "top-app-bar",
          "typography",
          "demos",
          "infrastructure",
          "package"
        ],
        "validate": true
      }
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "private": true
}
