// TypeScript config file that is used to compile the library into ES2015.
{
  "compilerOptions": {
    "declaration": true,
    "stripInternal": false,
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "newLine": "lf",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../dist/packages/web",
    "rootDir": ".",
    "rootDirs": [
      ".",
      "../dist/packages/web"
    ],
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2015",
    "lib": ["es5", "es2015", "dom"],
    "skipLibCheck": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@angular-mdc/web/*": ["../dist/packages/web/*"]
    }
  },
  "files": [
    "public-api.ts",
    "typings.d.ts"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "flatModuleOutFile": "index.js",
    "flatModuleId": "@angular-mdc/web",
    "skipTemplateCodegen": true,
    "fullTemplateTypeCheck": true,
    "enableIvy": false
  }
}
